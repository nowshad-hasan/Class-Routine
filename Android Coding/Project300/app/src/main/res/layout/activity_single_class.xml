<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.nowshad.project300.activity.SingleClassActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:paddingTop="25dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                android:text="Session"
                />
            <TextView
                android:paddingTop="25dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                android:id="@+id/sessionName"
                />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/dept"
            android:layout_below="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:paddingTop="25dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                android:text="Course Name"
                />

            <TextView
                android:paddingTop="25dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                android:id="@+id/courseName"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/session"
            android:layout_below="@+id/dept"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:paddingTop="25dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                android:text="Course Code"
                />

            <TextView
                android:paddingTop="25dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
               android:id="@+id/courseCode"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/phone1"
            android:layout_below="@+id/session"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:paddingTop="25dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                android:text="Time"
                />

            <TextView
                android:paddingTop="25dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                android:id="@+id/timeName"
                />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/phone2"
            android:layout_below="@+id/phone1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:paddingTop="25dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                android:text="Duration"
                />
            <TextView
                android:paddingTop="25dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                android:id="@+id/duration"
                />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/address"
            android:layout_below="@+id/phone2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:paddingTop="25dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                android:text="Room No"
                />

            <TextView
                android:paddingTop="25dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                android:id="@+id/roomNo"
                />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/course"
            android:layout_below="@+id/address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:paddingTop="25dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                android:text="Course Status"
                />

            <TextView
                android:paddingTop="25dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                android:id="@+id/courseStatus"
                />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/routine"
            android:layout_below="@+id/course"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:paddingTop="25dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                android:text="Class Status"
                />

            <TextView
                android:paddingTop="25dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                android:id="@+id/routineStatus"
                />


        </LinearLayout>


        <LinearLayout
            android:id="@+id/button"
            android:layout_below="@+id/course"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/buttonCancelClass"
                android:layout_marginTop="100dp"
                android:layout_marginRight="10dp"
                android:background="@color/colorPrimary"
                android:layout_weight="0.7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cancel Class"
                android:textColor="@color/mdtp_white"
                />

            <Button
                android:id="@+id/buttonRescheduleClass"
               android:paddingLeft="10dp"
                android:layout_marginTop="100dp"
                android:background="@color/colorPrimary"
                android:layout_weight="0.5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reschedule Class"
                android:textColor="@color/mdtp_white"
                />


        </LinearLayout>




    </RelativeLayout>

</ScrollView>

